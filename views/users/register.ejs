<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="\css\register.css" />
  </head>

  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <div class="register-container">
        <h2 class="register-titulo">REGISTRARME</h2>
        <div class="register-navbar">
          <ul class="register-nav">
            <li>
              <a href="/login" class="iniciar-sesion"> Iniciar Sesión </a>
            </li>
            <li><a href="/register" class="registrarme"> Registrarme </a></li>
          </ul>
        </div>
        <form action="/" method="GET">
          <div class="data-container">
            <div class="datos-personales">
              <h3>Datos personales</h3>

              <div class="reg-nombreCompleto">
                <input
                  type="text"
                  name="nombre"
                  class="inputNombre"
                  placeholder="Nombre"
                  required
                />
                <% if(locals.errors && locals.errors.nombre){ %>
                <p><%= errors.email.msg %></p>
                <% } %>
              </div>
              <div class="reg-apellido">
                <input
                  type="text"
                  name="apellido"
                  class="inputApellido"
                  placeholder="Apellido"
                  required
                />
                <% if(locals.errors && locals.errors.apellido){ %>
                <p><%= errors.email.msg %></p>
                <% } %>
              </div>
              <div class="form-birthday">
                <p>Fecha de Nacimiento</p>
                <input
                  type="date"
                  name="fechaDeNacimiento"
                  class="inputFecha"
                  id="fechaNac"
                />
                <% if(locals.errors && locals.errors.fechaDeNacimiento){ %>
                <p><%= errors.email.msg %></p>
                <% } %>
              </div>
              <div class="reg-genero">
                <p>Género</p>
                <input
                  list="genero"
                  class="inputGenero"
                  name="genero"
                  placeholder="Seleccionar"
                />
                <% if(locals.errors && locals.errors.genero){ %>
                <p><%= errors.email.msg %></p>
                <% } %>
                <datalist id="genero">
                  <option value="Mujer"></option>
                  <option value="Hombre"></option>
                  <option value="Otro"></option>
                </datalist>
              </div>
              <div class="reg-telefono">
                <input
                  type="tel"
                  name="telefono"
                  class="inputTelefono"
                  placeholder="Telefono"
                />
                <% if(locals.errors && locals.errors.telefono){ %>
                <p><%= errors.email.msg %></p>
                <% } %>
              </div>
            </div>

            <div class="sobre-mi-cuenta">
              <h3>Sobre mi cuenta</h3>

              <div class="reg-email">
                <input
                  type="email"
                  name="email"
                  class="inputEmail"
                  placeholder="Email"
                  required
                />
                <% if(locals.errors && locals.errors.email){ %>
                <p><%= errors.email.msg %></p>
                <% } %>
              </div>
              <div class="reg-conf-email">
                <input
                  type="file"
                  name="image"
                  class="inputEmail"
                  placeholder="Subir foto de perfil"
                  required
                />
                <% if(locals.errors && locals.errors.image){ %>
                <p><%= errors.email.msg %></p>
                <% } %>
              </div>
              <div class="reg-contraseña">
                <input
                  type="password"
                  name="password"
                  class="inputPassword"
                  placeholder="Contraseña"
                  required
                />
                <% if(locals.errors && locals.errors.password){ %>
                <p><%= errors.email.msg %></p>
                <% } %>
              </div>
              <div class="reg-conf-contraseña">
                <input
                  type="password"
                  name="password"
                  class="inputPassword"
                  placeholder="Confirmar contraseña"
                  required
                />
                <% if(locals.errors && locals.errors.password){ %>
                  <p> <%= errors.email.msg %>  </p>
                <% } %>
              </div>
              <div class="deportes-favoritos">
                <p>¿Cuál es tu deporte favorito?</p>
                <input
                  list="deporteFavorito"
                  name="deporteFavorito"
                  class="deporte-favorito"
                  placeholder="Seleccionar"
                />
                <datalist id="deporteFavorito">
                  <option value="Futbol"></option>
                  <option value="Tenis"></option>
                  <option value="Basquet"></option>
                  <option value="Running"></option>
                </datalist>
              </div>
            </div>
            <div class="register-radio-button">
              <input type="radio" name="newsletter" value="newsletter" />
              <label class="newsletter"
                >Quiero recibir email con ofertas y promociones</label
              >
            </div>
          </div>
          <div class="button-register">
            <button type="submit" class="button-register">
              Crear mi cuenta
            </button>
          </div>
        </form>
      </div>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
