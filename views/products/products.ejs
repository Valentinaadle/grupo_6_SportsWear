<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="\css\products.css" />
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <section>
        <h1 class="title">Todos nuestros productos</h1>
        <div class="products">
          <% products.forEach(products => { %>
          <article class="product">
            <img class="image" src="\images\<%=products.image%>" />
            <div class="product-info">
              <p class="product-detail name"><%=products.nombre%></p>
              <p class="product-detail description">
                <%=products.descripcion%>
              </p>
              <p class="product-detail year"><%=products.anio%></p>
              <p class="product-detail price">$<%=products.precio%></p>
            </div>
          </article>
          <% }) %>
        </div>
      </section>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
