<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="\css\creation-edition.css" />
  </head>

  <body>
    <%- include('../partials/header.ejs') %>
      

    <main>
      <center>
      <div class="form-container">
        <form
          action="/products/create"
          enctype="multipart/form-data"
          method="POST">
          <div class="register-container">
            <h1 class="register-title">Crea un nuevo producto</h1>
            <div class="register-navbar">
              <ul class="register-nav"></ul>
            </div>
            
              <div class="data-container">
                <div class="article-data ">
                  
                  <div class="properties-label">
                    <label>Código</label>
                    <input
                      
                      type="text"
                      class="inputNombre"
                      name="code"
                      id="code"
                      required
                      
                    />
                  </div>
                  
                  <div class="properties-label">
                    <label>Nombre del articulo</label>
                    <input
                      
                      type="text"
                      class="inputNombre"
                      name="name"
                      id="name"
                      required
                      
                    />
                  </div>
                  
                  <div class="properties-label">
                    <label>Descripcion</label>
                    <input
                      
                      type="text"
                      class="inputdescripcion"
                  
                      required
                      id="description"
                      name="description"
                    />
                  </div>
    
                  <div class="properties-label">
                    <label>Año</label>
                    <input
                      
                      type="text"
                      class="inputdescripcion"
                      
                      required
                      id="year"
                      name="year"
                    />
                  </div>
    
                  <div class="properties-label" >
                    
                    <label>Categoría</label>
                    <input
                    
                      type="text"
                      class="inputdescripcion"
                      
                      required
                      id="category"
                      name="category"
                    />
                  </div>
                  <div class="properties-label">
                    <label>Seleccionar la talla</label>
                    <input name="size" 
                    class="inputdescripcion" 
                    id="size"
                    />
                  
                </div>
                  <div class="properties-label">
                    <label>Precio</label>
                    <input
                      value=""
                      type="text"
                      class="inputdescripcion"
                      id="price"
                      name="price"
                      required
                    />
                  </div>
                  
                  <div>
                    <label class="properties-label">Agregar imagen</label>
                    
                      <div class="file-select" id="src-file2">
                        <input
                          class="inputfile"
                          type="file"
                          accept=".jpg,.png"
                          name="image"
                          id="image"
                        />
                    </div>
              </div>
              <nav class="bot">
                <center>
                  <input
                    class="button"
                    name="Crear"
                    value="Crear"
                    type="submit"
                  />
            </form>
          </div>
          </center>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
